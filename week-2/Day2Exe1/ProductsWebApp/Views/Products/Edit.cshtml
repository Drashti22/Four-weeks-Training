@model Product
<h1>Edit Product</h1>
<form method="post" asp-action="Create">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" />
    </div>
    <div>
        <label for="price">Price:</label>
        <input type="number" id="price" name="Price" />
    </div>
    <button type="submit">Edit</button>
</form>

